<!DOCTYPE html>

<title>Collective</title>

{% block body %}
    <h1>Collective</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ collective.id }}</td>
            </tr>
            <tr>
                <th>Date_seance</th>
                <td>{{ collective.dateSeance ? collective.dateSeance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_debut</th>
                <td>{{ collective.heureDebut ? collective.heureDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_fin</th>
                <td>{{ collective.heureFin ? collective.heureFin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nb_places</th>
                <td>{{ collective.nbPlaces }}</td>
            </tr>
            <tr>
                <th>Nb_personnes</th>
                <td>{{ collective.nbPersonnes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_collective_index') }}">back to list</a>

    <a href="{{ path('app_collective_edit', {'id': collective.id}) }}">edit</a>

    {{ include('collective/_delete_form.html.twig') }}
{% endblock %}
